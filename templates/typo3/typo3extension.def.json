{
  "name": "TYPO3 extension (plugin)",
  "description": "New extension with plugin - run on typo3conf/ext/",
  "vars": {},
  "files_and_folders": [
    "${extension_name}/ext_emconf.php|tmpl/ext_emconf.php",
    "${extension_name}/ext_icon.gif|tmpl/ext_icon.gif",
    "${extension_name}/ext_localconf.php|<php>|<typo3mode>|tmpl/configure_plugin.txt",
    "${extension_name}/ext_tables.php|<php>|<typo3mode>|tmpl/register_plugin.txt|tmpl/static_config.txt",
    "${extension_name}/ext_tables.sql",
    "${extension_name}/Classes/Controller/",
    "${extension_name}/Classes/Domain/",
    "${extension_name}/Classes/Domain/Model/",
    "${extension_name}/Classes/Domain/Repository/",
    "${extension_name}/Classes/ViewHelpers/",
    "${extension_name}/Classes/Service/",
    "${extension_name}/Configuration/FlexForms/",
    "${extension_name}/Configuration/TCA/",
    "${extension_name}/Configuration/TypoScript/",
    "${extension_name}/Resources/Private/Language/",
    "${extension_name}/Resources/Private/Language/locallang.xlf|tmpl/lang.xlf",
    "${extension_name}/Resources/Private/Language/locallang_db.xlf|tmpl/lang.xlf",
    "${extension_name}/Resources/Private/Layouts/",
    "${extension_name}/Resources/Private/Partials/",
    "${extension_name}/Resources/Private/Templates/",
    "${extension_name}/Resources/Public/Css/",
    "${extension_name}/Resources/Public/Icons/",
    "${extension_name}/Resources/Public/Images/",
    "${extension_name}/Resources/Public/JavaScript/"
  ],
  "content": {
    "php": "<?php\n",
    "typo3mode": "if (!defined('TYPO3_MODE')) {\n    die ('Access denied.');\n}\n"
  }
}
